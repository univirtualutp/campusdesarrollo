{{!
    @template  theme_boosted/setting_configcheckbox
    @copyright 2022-2023 koditik.com

    Admin checkbox setting template.

    Context variables required for this template:
    * name - form element name
    * no - no value
    * value - yes value
    * id - element id
    * checked - boolean

    Example context (json):
    {
        "name": "test",
        "no": "False",
        "value": "True",
        "id": "test0",
        "checked": "checked"
    }
}}


<label class="switch">
  <input type="hidden" name="{{name}}" value="{{no}}">
  <input {{#readonly}}disabled{{/readonly}} type="checkbox" name="{{name}}" value="{{value}}" id="{{id}}" {{#checked}}checked{{/checked}} class="success checkbox__setting" >
  <span class="slider round"></span>
</label>
        
        
        
